{
  "name": "billforge-print-client",
  "version": "1.0.0",
  "description": "WebSocket-based Bluetooth API service for printer management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "build": {
    "appId": "app.billforge.print.client",
    "productName": "Billforge Print Client",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": "dmg"
    },
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb", "rpm"]
    }
  },
  "keywords": [
    "bluetooth",
    "printer",
    "websocket",
    "electron"
  ],
  "author": "kadekedwin <kadekedwin12@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@serialport/bindings-cpp": "^13.0.1",
    "@serialport/parser-readline": "^13.0.0",
    "ws": "^8.18.3"
  }
}